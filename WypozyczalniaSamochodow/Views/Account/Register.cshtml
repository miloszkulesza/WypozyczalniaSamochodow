@model WypozyczalniaSamochodow.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Zarejestruj się";
}

<center>
    <div>
        <h1>Zarejestruj się</h1>
        @using (@Html.BeginForm("Register", "Account"))
        {
            @Html.AntiForgeryToken()

            <div id="login-error">
                @Html.ValidationMessage("loginerror", "")
            </div>

            <table id="login-table">
                <tr>
                    <td>@Html.LabelFor(o => o.Email, "E-mail:")</td>
                    <td>
                        @Html.TextBoxFor(o => o.Email)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.Email)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Password, "Hasło:")</td>
                    <td>
                        @Html.PasswordFor(o => o.Password)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.Password)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(o => o.ConfirmPassword, "Potwierdź hasło:")
                    </td>
                    <td>
                        @Html.PasswordFor(o => o.ConfirmPassword)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.ConfirmPassword)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(o => o.DaneKlienta.Imie, "Imię:")
                    </td>
                    <td>
                        @Html.TextBoxFor(o => o.DaneKlienta.Imie)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.DaneKlienta.Imie)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(o => o.DaneKlienta.Nazwisko, "Nazwisko:")
                    </td>
                    <td>
                        @Html.TextBoxFor(o => o.DaneKlienta.Nazwisko)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.DaneKlienta.Nazwisko)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(o => o.DaneKlienta.Adres, "Adres:")
                    </td>
                    <td>
                        @Html.TextBoxFor(o => o.DaneKlienta.Adres)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.DaneKlienta.Adres)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(o => o.DaneKlienta.Miasto, "Miasto:")
                    </td>
                    <td>
                        @Html.TextBoxFor(o => o.DaneKlienta.Miasto)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.DaneKlienta.Miasto)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(o => o.DaneKlienta.Telefon, "Telefon:")
                    </td>
                    <td>
                        @Html.TextBoxFor(o => o.DaneKlienta.Telefon)
                        <div class="login-validation-message">
                            @Html.ValidationMessageFor(o => o.DaneKlienta.Telefon)
                        </div>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Zarejestruj" class="submitLink" style="height: 40px; text-align: right; margin: 0px; padding: 0px;" />
                    </td>
                </tr>
            </table>
        }
    </div>
</center>

@section Scripts
{
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

